<Page x:Class="CRUDLibrary.Views.Pages.MembersPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CRUDLibrary.Views.Pages"
      xmlns:components="clr-namespace:CRUDLibrary.Views.Controls" 
      xmlns:viewmodels="clr-namespace:CRUDLibrary.ViewModels" 
      d:DataContext="{d:DesignInstance Type=viewmodels:MembersPageViewModel}"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MembersPage">

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="80" />
            <RowDefinition Height="50" />
            <RowDefinition Height="*" />
            <RowDefinition Height="2" />
        </Grid.RowDefinitions>

        <StackPanel  Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center">
            <components:ClearableTextBox Text="{Binding Member, UpdateSourceTrigger=PropertyChanged}" Height="40" Width="230" Margin="10, 10, 10 ,10" Panel.ZIndex="1"/>
            <components:RoundButton Command="{Binding SearchMemberCommand}" HeightWidth="41" Margin="20, 10, 10 ,10" Panel.ZIndex="1" Grid.Row="1"/>
            <components:AddButton Command="{Binding AddMemberCommand}" Width="40" Height="40" Margin="20,10"/>
            <components:EditButton Command="{Binding EditMemberCommand}" Width="40" Height="40" Margin="20,10"/>
            <Button Command="{Binding DeleteMemberCommand}" Style="{StaticResource DeleteButton}" Width="40" Height="40" Margin="20,10"/>
        </StackPanel>

        <components:DisplayTable ItemsSource="{Binding MemberTableCollection}" SelectedRow="{Binding SelectedMember, Mode=TwoWay}" 
                                 Panel.ZIndex="1" MinHeight="250" MaxWidth="1200"
                                 VerticalContentAlignment="Top" HorizontalContentAlignment="Center" Grid.Row="2" Margin="50,0,50,50">

            <components:DisplayTable.Columns>
                <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="2*" />
                <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="1*" />
                <DataGridTextColumn Header="PhoneNumber" Binding="{Binding PhoneNumber}" Width="1*" />
                <DataGridTextColumn Header="Id" Binding="{Binding Id}" Width="1*" />
            </components:DisplayTable.Columns>

        </components:DisplayTable>

    </Grid>
</Page>

